@model CartListViewModel

@{
    Layout = "_Layout";
}

<h2>Cart</h2>

@if (Model.Cart.CartLines.Count != 0)
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity Per Unit</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th>Cart Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cartLine in Model.Cart.CartLines)
            {
                <tr>
                    <td>@cartLine.Product.ProductId</td>
                    <td>@cartLine.Product.ProductName</td>
                    <td>@cartLine.Product.QuantityPerUnit</td>
                    <td>@cartLine.Product.UnitPrice</td>
                    <td>@cartLine.Product.UnitsInStock</td>
                    <td>@cartLine.Quantity</td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@cartLine.Product.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="container text-center">
        <h5>Wow Such Empty!</h5>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Go Shopping!</a>
    </div>
    }

