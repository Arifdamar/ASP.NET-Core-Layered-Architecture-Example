@model List<UrgencyListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-controller="Urgency" asp-action="AddUrgency" class="btn btn-outline-info my-2"><i class="fas fa-plus-circle mr-2"></i>Yeni Aciliyet Ekle</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr class="text-center align-middle">
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center align-middle">
                        @item.Definition
                    </td>
                    <td class="text-center align-middle">
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            No urgencies found
        </p>

        <a asp-controller="Urgency" asp-action="AddUrgency" class="btn btn-info btn-sm my-2">Add New Urgency</a>
    </div>
}