@model List<AllTasksListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <table class="table table-hover table-sm mt-2">
        <thead>
            <tr>
                <th>
                    Görev Adı
                </th>
                <th>
                    Açıklama
                </th>
                <th>
                    Oluşturulma Tarihi
                </th>
                <th>
                    Görevli
                </th>
                <th>
                    Aciliyet
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.CratedDate
                </td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <span class="badge badge-danger">Bu görevde çalışan yok.</span>
                        }
                        else
                        {
                            <span class="badge badge-success">Bu görevde @item.AppUser.Name çalışıyor.</span>
                        }
                    }
                </td>
                <td>
                    @item.Urgency.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="my-2 text-center lead">
        Herhangi bir görev bulunmuyor.
    </div>
}
