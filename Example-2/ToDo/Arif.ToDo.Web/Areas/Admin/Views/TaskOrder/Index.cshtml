@model List<AllTasksListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <table class="table table-hover table-sm mt-2">
        <thead>
            <tr>
                <th>
                    Görev Adı
                </th>
                <th>
                    Açıklama
                </th>
                <th>
                    Oluşturulma Tarihi
                </th>
                <th>
                    Görevli
                </th>
                <th>
                    Aciliyet
                </th>
                <th>
                    Rapor Sayısı
                </th>
                <th>
                    İşlem
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
            <tr>
                <td>
                    @task.Name
                </td>
                <td>
                    @task.Description
                </td>
                <td>
                    @task.CratedDate
                </td>
                <td>
                    @{
                        if (task.AppUser == null)
                        {
                            <span class="badge badge-danger">Bu görevde çalışan yok.</span>
                        }
                        else
                        {
                            <span class="badge badge-success">Bu görevde @task.AppUser.Name çalışıyor.</span>
                        }
                    }
                </td>
                <td>
                    @task.Urgency.Description
                </td>
                <td>
                    @task.Report.Count
                </td>
                <td>
                    @{
                        if (task.AppUser == null)
                        {
                            <a asp-action="Assignment" asp-controller="TaskOrder" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Personel Ata</a>
                        }
                        else
                        {
                            <a asp-action="ShowDetails" asp-controller="TaskOrder" asp-route-id="@task.Id" class="btn btn-info btn-sm">Detay Göster</a>
                        }
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="my-2 text-center lead">
        Herhangi bir görev bulunmuyor.
    </div>
}
