@model AllTasksListViewModel
@{
    ViewData["Title"] = "ShowDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Report.Count > 0)
{
    <a asp-action="ExportExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info my-2"><i class="far fa-file-excel mr-2"></i>Excel</a>
    <a asp-action="ExportPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info my-2"><i class="far fa-file-pdf mr-2"></i>PDF</a>
    <table class="table table-bordered table-hover table-sm mt-2">
        <tr>
            <th colspan="2" class="text-center">
                @Model.AppUser.Name @Model.AppUser.SurName personelinin, @Model.Name görevi için yazmış olduğu raporlar
            </th>
        </tr>
        <tr>
            <th>
                Tanım
            </th>
            <th>
                Detay
            </th>
        </tr>
        @foreach (var report in Model.Report)
        {
            <tr>
                <td>@report.Definition</td>
                <td>@report.Description</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        <p class="lead text-center">
            Bu görev üzerinde çalışan <strong class="text-primary">@Model.AppUser.Name @Model.AppUser.SurName</strong>, <strong class="text-primary">@Model.Name</strong> görevi için henüz hiç rapor yazmamış.
        </p>
    </div>
}