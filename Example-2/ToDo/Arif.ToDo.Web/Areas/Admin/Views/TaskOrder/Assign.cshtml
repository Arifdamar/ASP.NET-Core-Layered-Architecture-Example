@model TaskListViewModel
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-4">
        <div class="card border border-primary">
            <div class="card-header bg-primary">
                <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>

                <p class="card-text">
                    @Model.Description
                </p>

                <p class="card-text">
                    <strong>Aciliyet Durumu: </strong>
                    <span class="badge badge-primary">@Model.Urgency.Description</span>
                </p>

                <p class="card-text">
                    <small>
                        @Model.CratedDate.ToString("D")
                    </small>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        @foreach (var worker in (List<AppUserListViewModel>)ViewBag.Personnel)
        {
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@worker.Picture" class="card-img" alt="@worker.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@worker.Name @worker.SurName</h5>
                            <p class="card-text">
                                Bir görev almış mı?
                            </p>
                            <p class="card-text"><small class="text-muted">@worker.Email</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item @(ViewBag.ActivePage == i ? "active": "")"><a class="page-link" asp-action="Assign" asp-route-id="@Model.Id" asp-route-activePage="@i">@i</a></li>
                }
            </ul>
        </nav>
    </div>
</div>