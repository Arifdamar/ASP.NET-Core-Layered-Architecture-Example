@model TaskListViewModel
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>

                <p class="card-text">
                    @Model.Description
                </p>

                <p class="card-text">
                    <strong>Aciliyet Durumu: </strong>
                    <span class="badge badge-warning">@Model.Urgency.Description</span>
                </p>

                <p class="card-text">
                    <small>
                        @Model.CratedDate.ToString("D")
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>