@model List<NotificationListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    
    @if (Model.Count > 0)
    {
        @foreach (var notification in Model)
        {
            <form method="post" asp-action="Index" class="my-1">
                <p class="lead">
                    <input type="hidden" name="id" asp-for="@notification.Id"/>
                    <span class="d-inline align-items-center">
                        @notification.Description
                    </span>
                    <button type="submit" class="btn btn-success btn-sm float-right">
                        <i class="fas fa-check-double mr-1"></i>
                        Okundu
                    </button>
                </p>
            </form>
            <hr/>
        }
    }
    else
    {
        <p class="lead mt-5 text-center">
            Okunmamış bildiriminiz yoktur
        </p>
    }

</div>