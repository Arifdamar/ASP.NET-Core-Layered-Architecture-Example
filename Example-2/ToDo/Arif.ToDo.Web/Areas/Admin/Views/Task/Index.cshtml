@using System.Globalization
@model List<TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-controller="Task" asp-action="AddTask" class="btn btn-info btn-sm my-2">Add New Urgency</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>Aciliyet Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.CratedDate.ToString(CultureInfo.CurrentCulture)
                    </td>
                    <td>
                        @item.Urgency.Description
                    </td>
                    <td>
                        <a asp-action="UpdateTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                        <a data-toggle="modal" data-target="#deleteModal" data-id="@item.Id" class="btn btn-warning btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Hiç Görev Bulunamadı
        </p>

        <a asp-controller="Task" asp-action="AddTask" class="btn btn-info btn-sm my-2">Add New Task</a>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Uyarı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button id="btnDelete" type="button" class="btn btn-primary">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Javascript
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#deleteModal").on("show.bs.modal",
                function (event) {
                    let triggerElement = $(event.relatedTarget);
                    let id = triggerElement.data("id");

                    $("#btnDelete").click(function () {
                        
                        $.ajax({
                            type: "Get",
                            url: "./Task/DeleteTask",
                            data: { id: id },
                            dataType: "json",
                            contentType: "application/json: charset=utf-8",
                            success: function () {
                                window.location.reload();
                            },
                            error: function (data) {
                                alert(error.statusText);
                            }
                        });
                    });
                });
        });
    </script>
}