@using System.Globalization
@model List<TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-controller="Task" asp-action="AddTask" class="btn btn-info btn-sm my-2">Add New Urgency</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>Aciliyet Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.CratedDate.ToString(CultureInfo.CurrentCulture)
                </td>
                <td>
                    @item.Urgency.Description
                </td>
                <td>
                    <a asp-action="UpdateTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                    <a asp-action="DeleteTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Hiç Görev Bulunamadı
        </p>

        <a asp-controller="Task" asp-action="AddTask" class="btn btn-info btn-sm my-2">Add New Task</a>
    </div>
}
