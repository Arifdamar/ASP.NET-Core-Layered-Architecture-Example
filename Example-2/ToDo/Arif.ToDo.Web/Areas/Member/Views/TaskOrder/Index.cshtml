@model List<AllTasksListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (Model.Count == 0)
{
    <div class="text-center lead mt-5">
        Hiç Göreviniz Bulunmuyor
    </div>
}

@foreach (var task in Model)
{
    <div class="card mt-3">
        <h5 class="card-header">@task.Name</h5>
        <div class="card-body">
            <h5 class="card-title">@task.Urgency.Description</h5>
            <p class="card-text">@task.Description</p>
            <a href="#" class="btn btn-info">
                Raporlara Git
                <span class="badge badge-warning">@task.Report.Count</span>
            </a>
            <a href="#" class="btn btn-primary">
                Görevi Tamamla
            </a>
        </div>
    </div>
}
