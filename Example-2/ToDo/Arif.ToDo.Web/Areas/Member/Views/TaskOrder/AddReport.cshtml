@model Arif.ToDo.Web.Areas.Member.Models.ReportAddViewModel

@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
<div class="card my-3">
    <div class="card-header">
        @Model.Task.Name
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Task.Description</p>
        <span class="badge badge-info">@Model.Task.Urgency.Description</span>
    </div>
</div>
<form method="post" asp-action="AddReport" class="w-75 mx-auto p-3 mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TaskId"/>
    <div class="form-group">
        <label asp-for="Definition"></label>
        <span asp-validation-for="Definition" class="text-danger"></span>
        <input asp-for="Definition" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning">
            <i class="fas fa-arrow-left mr-2"></i>
            Geri Dön
        </a>
        <button type="submit" class="btn btn-info">
            <i class="fas fa-check mr-2"></i>
            Ekle
        </button>
    </div>
</form>

@section Javascript
{
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
}

