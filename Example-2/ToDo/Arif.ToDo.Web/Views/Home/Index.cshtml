@model AppUserSignInDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
}

<div class="w-50 container mt-5">
    <form asp-action="SignIn" method="post" class="mt-3 mx-auto p-3 shadow">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label">Beni Hatırla</label>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success btn-sm" value="Giriş Yap" />
            <a asp-action="Register" class="btn btn-info btn-sm">Kayıt Ol</a>
        </div>
    </form>
</div>
